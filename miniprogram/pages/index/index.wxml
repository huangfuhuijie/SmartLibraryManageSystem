<!--index.wxml-->
<view class="container">

  <!-- 用户 openid -->
  <view class="userinfo">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
    ></button>
    <view>
      <button class="userinfo-nickname" bindtap="onGetOpenid">点击登陆</button>
    </view>
  </view>
  
  <view class="uploader">
  <view class="uploader-text" bindtap="records">
      <text>数据记录页面</text>
    </view>
  </view>

  <view class="uploader">
  <view class="uploader-text" bindtap="managerMode">
      <text>进入管理员模式</text>
    </view>
  </view>

</view>
